<h2 class="NewUsers-title">Forgot Your Password?</h2>
<section class="UsersNew">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-section">
      <%= f.label :email, class:"FormInput-label" %><br />
      <%= f.email_field :email,class:"Form-Input", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions form-section">
      <%= f.submit "Send me reset password instructions", class:"Form-submit" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>