<h2 class="NewUsers-title">Log in</h2>

<section class="UsersNew">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-section">
        <%= f.label :email , class:"FormInput-label"%><br />
        <%= f.email_field :email, class:"Form-Input",autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-section">
        <%= f.label :password , class:"FormInput-label"%> <br />
        <%= f.password_field :password,class:"Form-Input", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-section">
          <%= f.check_box :remember_me , class:"CheckInput" %>
          <%= f.label :remember_me, class:"CheckInput-label" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"Form-submit"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
</section>
